<%= form_for room, html: { class: "ui error form segment" } do |f| %>

  <%= error_messages room %>

  <div class="required field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div>

  <h5 class="ui header"><%= t('rooms.sharing') %></h5>
  <div class="field inline">
    <div class="ui toggle checkbox">
      <%= f.check_box :public %>
      <label><%= t('rooms.public_access') %></label>
    </div>
  </div>

  <div class="field inline">
    <div class="ui toggle checkbox">
      <%= f.check_box :share_link %>
      <label><%= t('rooms.enable_share_link') %></label>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "ui blue button"%>
  </div>
<% end %>

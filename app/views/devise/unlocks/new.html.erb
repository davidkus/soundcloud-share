<h2 class="ui dividing header"><%= t('devise.unlocks.resend_unlock_instructions') %></h2>

<%= form_for(resource, as: resource_name,
                       url: unlock_path(resource_name),
                       html: { method: :post, class: "ui error form segment" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <div class="ui left icon input">
      <%= f.email_field :email, autofocus: true %>
      <i class="mail icon"></i>
    </div>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('devise.unlocks.resend_unlock_instructions'),
                 class: "ui submit blue button" %>
  </div>
<% end %>

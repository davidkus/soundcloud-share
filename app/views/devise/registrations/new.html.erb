<h2 class="ui dividing header"><%= t('devise.registrations.sign_up') %></h2>

<%= form_for(resource, as: resource_name,
                       url: registration_path(resource_name),
                       html: {class: "ui error form segment"}) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %>
    <div class="ui left icon input">
      <%= f.text_field :username, autofocus: true %>
      <i class="user icon"></i>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %>
    <div class="ui left icon input">
      <%= f.email_field :email %>
      <i class="mail icon"></i>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="ui left icon input">
      <%= f.password_field :password, autocomplete: "off" %>
      <i class="lock icon"></i>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <div class="ui left icon input">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <i class="lock icon"></i>
    </div>
  </div>

  <div class="actions">
    <%= f.submit I18n.t('devise.registrations.sign_up'), class: "ui submit blue button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

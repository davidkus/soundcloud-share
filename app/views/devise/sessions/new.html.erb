<div class="ui two column middle aligned relaxed fitted stackable grid">
<div class="column">
<%= form_for(resource, as: resource_name,
                       url: session_path(resource_name),
                       html: { class: "ui error form segment" }) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <div class="ui left icon input">
      <%= f.email_field :email, autofocus: true %>
      <i class="mail icon"></i>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password, autocomplete: "off" %>
      <i class="lock icon"></i>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field inline">
      <div class="ui checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit I18n.t('devise.sessions.log_in'), class: "ui submit blue button" %>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "ui compact button" %>
    <% end -%>
  </div>
<% end %>
</div>
<div class="ui vertical divider">
  Or
</div>
<div class="center aligned column">
  <%= link_to new_registration_path(resource_name), class: "huge green ui labeled icon button" do %>
    <i class="signup icon"></i>
    Sign Up
  <% end %>
</div>
</div>
